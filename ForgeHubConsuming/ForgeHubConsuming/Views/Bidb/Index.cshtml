@model List<ForgeHubConsuming.DTO.RFQDTO>
<table class="table" id="mytable">
    <thead>
        <tr>
            <th scope="col">RFQ NO</th>
            <th scope="col">Indent </th>
            <th scope="col">Item Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">UOM</th>
            <th scope="col">Delivery Location</th>
            <th scope="col">Delivery Date</th>
            <th scope="col">Bid Date</th>
            <th scope="col">Expiry</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.RFQNo</th>
                <td>@i.IndentNo</td>
                <td>@i.ItemName</td>
                <td>@i.ReqQty</td>
                <td>@i.UOM</td>
                <td>@i.DeliveryLocation</td>
                <td>@i.ReqDeliveryDate</td>
                <td>@i.BidDate</td>
                <td>@i.ExpiryDateofBid</td>
                <td>@i.Status</td>
        
                <td class="text-center">
                    <a asp-action="View" asp-route-id="@i.RFQId" class="btn btn-outline-primary btn-sm me-1" title="View">
                        <i class="bi bi-eye-fill">View</i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@i.RFQId" class="btn btn-outline-success btn-sm me-1" title="Edit">
                        <i class="bi bi-pencil-fill">Edit</i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@i.RFQId" class="btn btn-outline-danger btn-sm" title="Delete">
                        <i class="bi bi-trash-fill">Delete</i>
                    </a>
                </td>

            </tr>

        }

    </tbody>
</table>
<a asp-action="AddRfq" class="btn btn-primary">Add BID</a>
